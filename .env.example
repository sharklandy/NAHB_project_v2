# Backend Environment Variables (backend/.env)
# Copiez ce fichier en backend/.env et remplissez avec vos vraies valeurs

# MongoDB Atlas Connection String
# Demandez l'URL de connexion au propriétaire du projet
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/BDD?retryWrites=true&w=majority

# JWT Secret (doit être le même pour tous les collaborateurs)
# Demandez le secret au propriétaire du projet
JWT_SECRET=changez_moi_avec_le_vrai_secret

# Port du serveur
PORT=4000

# Frontend Environment Variables (racine/.env)
# Pour le développement local
REACT_APP_API=http://localhost:4000/api
